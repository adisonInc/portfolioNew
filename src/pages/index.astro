---
import Backgrounds from "./Backgrounds.astro";
import TopBar from "./top_bar.astro";
import MainStyle from "../styles/main.astro";
import System from "./system.astro";
import Anim from "./animations/anim.astro";
import Menu from "./menu.astro";
import Desc from "./desc.astro";
import DescContent1 from "./descContent1.astro";
import DescContent2 from "./descContent2.astro";
import Footer from "./footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Kamil's portfolio WORK IN PROGRESS</title>
	</head>

	<body>
		<div class="end"></div>
		<Anim />
		<Backgrounds />
		<MainStyle />
		<TopBar />
		<System />
		<Menu />
		
		<Desc  style="position: absolute; top: 135vh; left: 25%;">
			<div id="belt"></div>
			<DescContent1 />
		</Desc>
		<Desc style="position: absolute; top: 305vh; left: 25%;" >
			<div id="belt"></div>
			<DescContent2 />
		</Desc>
		<Desc style="position: absolute; top: 480vh; left: 25%; " />
		
		<Desc style="position: absolute; top: 640vh; left: 25%;" />
		<Footer></Footer>
	</body>
	<style>
		body {
			font-family: "Roboto Mono", monospace;
			background-color: #000007;
			height: 500vh;
			margin: 0;
			scroll-behavior: smooth;
		}

		.end {
			position: absolute;
			top: 900vh;
			height: 10px;

			width: 100%;
		}
		#first {
			position: absolute;
			top: 130vh;
			left: 50%;
			width: 200px;
			height: 300px;
		}

		#second {
			position: absolute;
			top: 200vh;
			left: 30%;
			width: 250px;
			height: 250px;
			background: #222;
		}

		#third {
			position: absolute;
			top: 300vh;
			left: 70%;
			width: 180px;
			height: 320px;
			background: #333;
		}

		#fourth {
			position: absolute;
			top: 400vh;
			left: 40%;
			width: 220px;
			height: 280px;
			background: #444;
		}
		#belt{
			
			height: 100%;
			position: absolute;
			z-index: -1;
			width: 50%;
			left: 50%;
			transform: translate(-50%, 0%);
			background-color: aliceblue;
			box-shadow: 0px 0px 300px 100px rgb(6, 69, 69);
		}
	</style>
</html>
