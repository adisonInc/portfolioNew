<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import { ScrollToPlugin } from "gsap/ScrollToPlugin";
    import { TextPlugin } from "gsap/all";
    gsap.registerPlugin(ScrollTrigger);
    gsap.registerPlugin(ScrollToPlugin);
    gsap.registerPlugin(TextPlugin)



    const labels = ["first", "second", "third", "fourth"]; // Add more labels here
    const totalRotation = 360;
    const rotateStep = totalRotation / labels.length;

    let descs = ['<br><h4> *--Project 1 </h4> <p> <h3> WORK IN PROGRESS <h3> <br> Ten projekt to strona napisana w astro i to moje portfolio<p>'
    ,"WORK IN PROGRESS 2 ", "WORK IN PROGRESS 3","WORK IN PROGRESS 4"]

  let tl = gsap.timeline( {
    scrollTrigger: {
    trigger: ".solar",
    pin: ".solar",
    start: "center center",
    endTrigger: ".end",
    end: 'bottom bottom',
    scrub: 1,
        snap: {
            snapTo: 'labelsDirectional', 
            duration: {min: 0.1, max: 1},
            delay: 0, 
            ease: 'power1.inOut' 
        }
  }});


  
tl.addLabel("start")
.to(".solar",{
    x: "-50vw",
    rotate: "360",
    duration: 1,
}).to(".tree",{
    right: "5%",
    opacity: +1,
    duration: 1,

},).fromTo(".descMain",{
    y: "-100vh",
},{
    y: "+=100vh",
     opacity: "+=0.7",
    },"<");



  labels.forEach((label, i) => {
    tl.addLabel(label).to(".solar", {
      rotate: `+=${rotateStep}`,
      
      duration: 1,
    })
  
    .to(".descText", {
        text: `${descs[i]} `
    },"-=1.5")
    .to(`#${label}`,{
       color: "blue",
      },"<")
    .to(`#${label}`,{
       color: "red",
    })
  });

  window.addEventListener("DOMContentLoaded", () => {

    let buttons = document.querySelectorAll(".tree p");
    let descBox = document.getElementById("descBox")

    buttons.forEach((button) => {
      let animation = gsap.to(button, {
        scale: "+=0.5",
        duration: 0.1,
        paused: true,
      });

      button.addEventListener("mouseenter", () => animation.play());
      button.addEventListener("mouseleave", () => animation.reverse());


      button.addEventListener("click", () => {
        let label = button.id;
        
        if (tl.scrollTrigger) {
          let scrollTo = tl.scrollTrigger.labelToScroll(label);

          gsap.to(window, {
            scrollTo: { y: scrollTo, autoKill: false },
            duration: 1,
            ease: "power2.inOut",
          });
        }
      });
    });
  });

</script>

