---
import Small from "./Small.astro"
---

<div class="solar" >
    <div class="smaller"></div>
    <img  class="elips" src="/img/circle1.svg" alt="elipsa" />
    <div class="planets">
        <Small color="#3326EB" top="0%" left="50%" rotate="-90deg" img="/img/rust.png" />
        <Small color="#181790" top="50%" left="0%" rotate="180deg" img="/img/cpp.png" />
        <Small color="#4235ec" top="100%" left="50%" rotate="90deg" img="/img/astro.png" />
        <Small color="#271EC4" top="50%" left="100%" rotate="0deg"  img="/img/python.svg"/>
    </div>
</div>
<style>
    .solar{
        width: 30vh;
        height: 30vh;
        background-color: aqua;
        position: absolute;
        border-radius: 50%;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
        box-shadow:
            inset 0 0 50px #fff,
            inset 20px 0 80px rgb(57, 4, 251),
            inset -20px 0 80px #0ff,
            inset 20px 0 300px rgb(57, 4, 251),
            inset -20px 0 300px rgb(0, 140, 255),
            0 0 50px #fff,
            -10px 0 80px rgb(57, 4, 251),
            10px 0 80px #0ff;
    }
    .elips{
        width: 220%;
        height: 220%;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
        position: absolute;

    }
    .planets{
        width:  190%;        
        height: 190%;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
    }
   
    

  
</style>